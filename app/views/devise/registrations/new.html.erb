<div class="container vh-100 d-flex justify-content-center align-items-center">
  <div class="row w-100">
    <div class="col-md-6 d-flex flex-column align-items-center justify-content-center">
      <img src="<%= asset_path('logo.png') %>" alt="GenHacks AI Logo" style="width: 300px;">
    </div>

    <div class="col-md-6 d-flex justify-content-center align-items-center">
      <div class="p-4 border rounded w-75 bg-black shadow-sm">
        <h4 class="fw-bold mb-4">新規登録</h4>

        <%= form_for(resource, as: resource_name, url: user_registration_path, html: { id: "registrationForm", autocomplete: "off" }) do |f| %>

          <!-- メールアドレス -->
          <div class="mb-3">
              <%= f.label :email, "メールアドレス <span class='text-danger'>必須</span>".html_safe, class: "form-label" %>
            <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "new-email" %>
            <% if resource.errors[:email].any? %>
              <div class="text-danger small"><%= resource.errors[:email].first %></div>
            <% end %>
          </div>

          <!-- パスワード -->
          <div class="mb-3">
            <%= f.label :password, "パスワード  <span class='text-danger'>必須</span>".html_safe, class: "form-label" %>
            <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
            <% if resource.errors[:password].any? %>
              <div class="text-danger small"><%= resource.errors[:password].first %></div>
            <% end %>
          </div>

          <!-- パスワード確認 -->
          <div class="mb-3">
            <%= f.label :password_confirmation, "パスワード（確認） <span class='text-danger'>必須</span>".html_safe, class: "form-label" %>
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
            <% if resource.errors[:password_confirmation].any? %>
              <div class="text-danger small"><%= resource.errors[:password_confirmation].first %></div>
            <% end %>
          </div>

          <!-- ニックネーム -->
          <div class="mb-3">
            <%= f.label :name, "ニックネーム  <span class='text-danger'>必須</span>".html_safe, class: "form-label" %>
            <%= f.text_field :name, class: "form-control", value: resource.name || "", autocomplete: "new-name" %>
            <% if resource.errors[:name].any? %>
              <div class="text-danger small"><%= resource.errors[:name].first %></div>
            <% end %>
          </div>

          <!-- 自己紹介 -->
          <div class="mb-3">
            <%= f.label :profile, "自己紹介", class: "form-label" %>
            <%= f.text_area :profile, rows: 3, class: "form-control" %>
            <% if resource.errors[:profile].any? %>
              <div class="text-danger small"><%= resource.errors[:profile].first %></div>
            <% end %>
          </div>

          <!-- アバター -->
          <div class="mb-3">
            <%= f.label :avatar, "アバター画像", class: "form-label" %>
            <%= f.file_field :avatar, class: "form-control" %>
            <% if resource.errors[:avatar].any? %>
              <div class="text-danger small"><%= resource.errors[:avatar].first %></div>
            <% end %>
          </div>

          <div class="d-grid gap-2">
            <%= f.submit "登録する", class: "btn", style: "background-color: #0f4e8a; color: white;" %>
          </div>
        <% end %>

        <div class="mt-3">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
