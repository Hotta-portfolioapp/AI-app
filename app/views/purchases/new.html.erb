<% content_for :head do %>
  <meta name="stripe-public-key" content="<%= @stripe_public_key %>">
<% end %>

<h1>決済ページ</h1>

<p style="background:#f9f9f9; padding:1em; border:1px solid #ddd; margin-bottom:1em;">
  <strong>【テスト用カード情報】</strong><br>
  カード番号: <code>4242 4242 4242 4242</code><br>
  有効期限: <code>12 / 34</code><br>
  CVC: <code>123</code><br>
</p>

<%= form_with url: knowhow_purchases_path(@knowhow), method: :post, id: "payment-form", local: true do %>
  <div id="card-element" style="margin-bottom: 1em; min-height: 40px;"></div>
  <div id="card-errors" style="color: red; margin-bottom: 1em;"></div>
  <%= submit_tag "購入する" %>
<% end %>
