<header class="navbar navbar-expand-lg bg-white shadow-sm px-4 py-3 border-bottom" style="font-family: 'BIZ UDPGothic', sans-serif;">
  <div class="container-fluid d-flex justify-content-between align-items-center">

    <!-- 左ロゴ -->
    <div class="d-flex align-items-center">
      <%= link_to root_path, class: "d-flex align-items-center text-decoration-none" do %>
        <%= image_tag "logo.png", alt: "GenHacks Logo", class: "me-2", style: "height: 40px;" %>
      <% end %>
    </div>

    <!-- 右メニュー -->
    <div class="d-flex align-items-center">
      <%= link_to knowhows_path, class: "text-decoration-none text-dark fw-bold me-4 d-inline-block", style: "position: relative; left: -30px;" do %>
        <div class="mt-1" style="font-size: 0.9rem;">AI生成一覧</div>
      <% end %>

      <% if user_signed_in? %>
        <!-- 投稿ボタン -->
        <%= link_to new_knowhow_path, class: "d-flex flex-column align-items-center text-decoration-none text-dark me-3" do %>
          <div class="btn btn-outline-dark rounded-circle d-flex align-items-center justify-content-center" style="width: 30px; height: 30px; font-size: 1rem;">
            ＋
          </div>
          <div class="mt-1 fw-semibold" style="font-size: 0.8rem;">投稿する</div>
        <% end %>

        <!-- ユーザーメニュー（ドロップダウン） -->
        <div class="dropdown d-flex flex-column align-items-center ms-3">
          <button class="btn p-0 border-0 bg-transparent d-flex flex-column align-items-center"
                  type="button" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
            <!-- 丸いアイコン -->
            <% if current_user.avatar.attached? %>
              <%= image_tag current_user.avatar.variant(resize_to_fill: [30, 30]), class: "rounded-circle", style: "width: 30px; height: 30px; object-fit: cover;" %>
            <% else %>
              <div class="btn btn-dark rounded-circle d-flex align-items-center justify-content-center"
                   style="width: 30px; height: 30px;">
                <%= current_user.name.present? ? current_user.name[0].upcase : "？" %>
              </div>
            <% end %>
            <!-- テキスト -->
            <div class="fw-semibold mt-1" style="font-size: 0.8rem;">マイページ</div>
          </button>

          <!-- ドロップダウンメニュー -->
          <ul class="dropdown-menu dropdown-menu-end text-nowrap mt-2" aria-labelledby="userMenu">
            <li class="dropdown-header fw-bold"><%= current_user.name.presence || "ユーザー名" %></li>

            <!-- 横並びのプロフィールリンク -->
            <li>
              <div class="d-flex justify-content-between px-3 py-2">
                <%= link_to "プロフィールを編集", edit_user_path(current_user), class: "dropdown-item px-0 me-2 flex-fill text-start" %>
                <%= link_to "アカウントを編集", edit_user_registration_path, class: "dropdown-item px-0 ms-2 flex-fill text-start" %>
              </div>
            </li>

            <li><hr class="dropdown-divider"></li>
            <li><%= link_to "お支払い情報", "#", class: "dropdown-item small-text" %></li>
            <li><%= link_to "投稿一覧", user_path(current_user), class: "dropdown-item small-text" %></li>
            <li><%= link_to "購入済み一覧", "#", class: "dropdown-item small-text" %></li>
            <li><hr class="dropdown-divider"></li>
            <li><%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item text-danger small-text" %></li>
          </ul>
        </div>
      <% else %>
        <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-dark fw-bold rounded-pill px-4 me-4", style: "font-size: 0.9rem;" %>
        <%= link_to "新規登録", new_user_registration_path, class: "btn btn-success fw-bold rounded-pill px-4", style: "font-size: 0.9rem;" %>
      <% end %>
    </div>
  </div>
</header>
