<%= form_with model: @knowhow, local: true, multipart: true do |f| %>
  <div class="container">

    <!-- STEP 1: 基本情報 -->
    <div id="step-1" class="mt-5">
      <div class="container" style="max-width: 1140px;">
        <div class="d-flex flex-row flex-wrap gap-5 justify-content-center">

    <!-- 左カラム：メディアアップロード -->
    <div class="media-section d-flex flex-row flex-nowrap gap-4" style="min-width: 300px; flex: 1;">
      
      <!-- サムネイル3つ -->
      <div class="d-flex flex-column gap-3" id="media-preview-container">
        <% 3.times do |i| %>
          <label
            class="upload-frame border rounded bg-light d-flex justify-content-center align-items-center"
            style="width: 80px; height: 80px; cursor: pointer; position: relative;"
            data-index="<%= i %>">
            <span class="text-muted">＋</span>
            <%= file_field_tag "knowhow[media_files][]",
                  accept: "image/*,video/*,audio/*",
                  class: "d-none thumbnail-input",
                  id: "upload-input-thumb-#{i}" %>
          </label>
        <% end %>
      </div>

      <!-- メインアップロード -->
      <div class="flex-grow-1">
        <label
          class="upload-frame border rounded bg-light d-flex justify-content-center align-items-center"
          style="width: 100%; height: 360px; cursor: pointer; position: relative;"
          id="main-upload-label">

          <span class="text-muted position-absolute top-50 start-50 translate-middle" id="main-upload-placeholder">
            ＋ メインメディア
          </span>

          <%= file_field_tag "knowhow[media_files][]",
                accept: "image/*,video/*,audio/*",
                class: "d-none thumbnail-input", id: "main-upload-input" %>
        </label>

        <div id="main-preview-content" class="mt-3"></div>
      </div>
    </div>

          <!-- 右カラム：基本情報 -->
          <div style="min-width: 250px; max-width: 400px; flex: 1;">
            <div class="mb-3">
              <%= f.label :title %>
              <%= f.text_field :title, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= f.label :description %>
              <%= f.text_area :description, class: "form-control", rows: 5 %>
            </div>
            <div class="mb-3">
              <%= f.label :category_type, "カテゴリ" %>
              <%= f.select :category_type,
                  Knowhow.category_types.keys.map { |k| [t("enum.knowhow.category_type.#{k}"), k] },
                  { include_blank: "選択してください" },
                  class: "form-select" %>
            </div>
            <div class="mb-3">
              <%= f.label :price %>
              <%= f.number_field :price, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= f.label :tag_list, "タグ (カンマ区切りで入力)" %>
              <%= f.text_field :tag_list, value: @knowhow.tags.map(&:name).join(','), class: "form-control" %>
            </div>
            <div class="text-end mt-4">
              <button type="button" class="btn btn-primary" id="go-to-step-2">次へ</button>
            </div>
          </div>

        </div>
      </div>
    </div>

    <!-- STEP 2: 作り方 -->
    <div id="step-2" class="d-none mt-5">
      <h3 class="mb-4">生成手順</h3>

      <div class="mb-3">
        <%= label_tag :software, "使用ソフト" %>
        <%= text_field_tag :software, "", class: "form-control", placeholder: "例: ChatGPT、Adobe Firefly" %>
      </div>

      <div id="instructions" class="row g-3 mt-3">
        <%= f.fields_for :instructions do |instruction_form| %>
          <div class="col-md-4">
            <div class="instruction-block card position-relative shadow-sm p-3" style="width: 100%; max-width: 350px;">
              <div class="step-badge" style="z-index: 20;">
                <%= instruction_form.object.step.presence || 1 %>
              </div>
              <div class="dropdown step-menu" style="z-index: 20;">
                <button class="btn btn-sm btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">⋯</button>
                <ul class="dropdown-menu">
                  <li><button type="button" class="dropdown-item add-step">作り方を追加</button></li>
                  <li><button type="button" class="dropdown-item remove-step">作り方を削除</button></li>
                </ul>
              </div>
              <div class="mb-2 text-center">
                <label class="upload-area bg-light rounded d-flex justify-content-center align-items-center position-relative"
                       style="width: 100%; aspect-ratio: 16 / 9; cursor: pointer; overflow: hidden;">
                  <i class="fa-solid fa-image fa-2x upload-icon position-absolute top-50 start-50 translate-middle text-muted"></i>
                  <img src="#" class="img-preview d-none position-absolute top-0 start-0 w-100 h-100 rounded" style="object-fit: cover;">
                  <%= instruction_form.file_field :image, class: "d-none", accept: "image/*", onchange: "previewImage(this)" %>
                </label>
              </div>
              <%= instruction_form.text_area :description, rows: 4, class: "form-control mb-2", placeholder: "説明文を入力" %>
              <%= instruction_form.hidden_field :step %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- テンプレート -->
      <template id="instruction-template">
        <div class="col-md-4">
          <div class="instruction-block card position-relative shadow-sm p-3" style="width: 100%; max-width: 350px;">
            <div class="step-badge" style="z-index: 20;">STEP_NUMBER</div>
            <div class="dropdown step-menu" style="z-index: 20;">
              <button class="btn btn-sm btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">⋯</button>
              <ul class="dropdown-menu">
                <li><button type="button" class="dropdown-item add-step">作り方を追加</button></li>
                <li><button type="button" class="dropdown-item remove-step">作り方を削除</button></li>
              </ul>
            </div>
            <div class="mb-2 text-center">
              <label class="upload-area bg-light rounded d-flex justify-content-center align-items-center position-relative"
                     style="width: 100%; aspect-ratio: 16/ 9; cursor: pointer; overflow: hidden;">
                <i class="fa-solid fa-image fa-2x upload-icon position-absolute top-50 start-50 translate-middle text-muted"></i>
                <img src="#" class="img-preview d-none position-absolute top-0 start-0 w-100 h-100 rounded" style="object-fit: cover;">
                <input type="file" name="knowhow[instructions_attributes][NEW_INDEX][image]" class="d-none" accept="image/*" onchange="previewImage(this)">
              </label>
            </div>
            <textarea name="knowhow[instructions_attributes][NEW_INDEX][description]" rows="4" class="form-control mb-2" placeholder="説明文を入力"></textarea>
            <input type="hidden" name="knowhow[instructions_attributes][NEW_INDEX][step]" value="STEP_NUMBER">
          </div>
        </div>
      </template>

      <div class="d-flex justify-content-between mt-5">
        <button type="button" class="btn btn-secondary" id="back-to-step-1">戻る</button>
        <%= f.submit "投稿する", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
